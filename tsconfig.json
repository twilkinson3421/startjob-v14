{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@ui-core/*": ["./src/components/interface/core/*"],
      "@ui-layout/*": ["./src/components/interface/layout/*"],
      "@ui-forms/*": ["./src/components/interface/forms/*"],
      "@ui-symbols/*": ["./src/components/interface/symbols/*"],
      "@ui-typography/*": ["./src/components/interface/typography/*"],
      "@actions/*": ["./src/handlers/actions/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@components/*": ["./src/components/*"],
      "@providers/*": ["./src/providers/*"],
      "@handlers/*": ["./src/handlers/*"],
      "@locale/*": ["./src/locale/*"],
      "@config/*": ["./src/config/*"],
      "@models/*": ["./src/models/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@app/*": ["./src/app/*"],
      "@lib/*": ["./src/lib/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
